{
  "name": "jira-server",
  "productName": "Jira Server",
  "version": "1.0.0",
  "description": "Enter your Jira Server URL, and Open your Jira Server browser in a click and boost your productivity.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "Jira",
    "Server",
    "Productivity",
    "App"
  ],
  "author": "Comp Labs <complabs28@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^16.0.2",
    "electron-packager": "^15.4.0",
    "electron-builder": "^22.3.2"
  },
  "build": {
    "productName": "Jira Server",
    "generateUpdatesFilesForAllChannels": true,
    "mac": {
      "artifactName": "Jira-Server.${ext}",
      "target": [
        {
          "arch": "universal",
          "target": "dmg"
        },
        {
          "arch": "universal",
          "target": "zip"
        }
      ],
      "category": "com.complabs.Jira-Server.category.productivity",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "asarUnpack": "**/*.node"
    },
    "linux": {
      "artifactName": "Jira-Server-${arch}.${ext}",
      "category": "CompLabs;JiraServer;Category;Productivity",
      "description": "Comp Labs Meet Desktop App",
      "desktop": {
        "Comment[hu]": "Asztali Comp Labs Meet-alkalmaz√°s"
      },
      "executableName": "Jira-Server",
      "target": [
        {
          "arch": "x64",
          "target": "snap"
        },
        {
          "arch": "x64",
          "target": "AppImage"
        },
        {
          "arch": "x64",
          "target": "deb"
        }
      ]
    },
    "deb": {
      "depends": [
        "libgtk-3-0",
        "libnss3",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1"
      ]
    },
    "win": {
      "artifactName": "Jira-Server.${ext}",
      "target": [
        {
          "arch": [
            "ia32",
            "x64"
          ],
          "target": "nsis"
        }
      ]
    }
  }
}
